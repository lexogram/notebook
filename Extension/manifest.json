{
  "manifest_version": 2

, "name": "Annotations"
, "version": "1.0"
, "description": "Helps you save and share notes about web pages."

, "browser_action": {
    "default_icon": "img/19/inactive.png"
  , "default_popup": "html/popup.html"
  }

, "permissions": [
    "activeTab"
  , "*://*/*"
  , "tabs"
  ]

, "icons": {
    "16": "img/icon16.png"
  , "48": "img/icon48.png"
  , "128": "img/icon128.png"
  }

, "background": {
    "scripts": [
      "js/tools.js"
    , "js/background.js"
    ]
  }

, "externally_connectable": {
    "matches": [
      "http://localhost:*/*"
    ]
  }

, "content_scripts": [
    { "matches": [
        "<all_urls>"
      ]
    , "exclude_matches": [
        "http://localhost:*/*"
      ]
    , "js": [
        "js/content.js"
      , "js/languages.js"
      ]
    }
  , {
      "matches": [
        "https://*.wiktionary.org/*"
      ]
    , "js": [
        "js/wiktionary_frame.js"
      ]
    , "all_frames": true
    }
  ]
}