{
  "manifest_version": 2

, "name": "Connect"
, "version": "1.0"
, "description": "Tests a connection butween a page script and a background script"

, "browser_action": {
    "default_icon": "img/icon19.png"
  }

, "permissions": [
    "activeTab"
  ]

, "icons": {
    "16": "img/icon16.png"
  , "48": "img/icon48.png"
  , "128": "img/icon128.png"
  }

, "background": {
    "scripts": [
      "js/background.js"
    ]
  }

, "externally_connectable": {
    "matches": ["http://localhost/*"]
  }
}