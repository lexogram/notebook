{
  "name": "Lexogram NoteBook"
, "description": "Make and share notes on the web pages you visit in a language you are learning."
, "version": "1.0"
, "manifest_version": 2

, "browser_action": {
    "default_title": "Learn a new language" // tooltip
  , "default_icon": "img/icon19sw.png"
  , "default_popup": "html/settings.html"
  }

, "icons": {
    "16": "img/icon16sw.png"
  , "48": "img/icon48s.png"
  , "128": "img/icon128s.png"
  }

, "permissions": [
    "activeTab"
  , "tabs"
  , "<all_urls>"
  ]

, "content_scripts": [ {
    "matches": ["<all_urls>"]
  , "js": [
      "js//lx_content.js"
    ]

    // files are injected immediately after the DOM is complete
    // but before subresources like images and frames have loaded. 
  , "run_at": "document_start"
  , "all_frames": true
  } ]
}